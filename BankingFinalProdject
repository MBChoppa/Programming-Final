        }
        case '4':
        {
            cout << "Please enter the account number." << endl;
            string num;
            int place = -1;
            cin >> num;

            for (int i = 0; i < 19; i++)
            {
                if (accountinfo[i][0] == num)
                {
                    place = i;
                }
            }
            if (place == -1)
            {
                cout << "That is not an account that exists." << endl;
                break;
            }
